{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block header %}
    <div class="container-fluid d-flex justify-content-center py-4">
        <img src="{{ asset('img/logo.png') }}" alt="Sortir.com logo" class="object-fit-contain" width="170">
    </div>
{% endblock %}

{% block body %}

    <div class="container d-flex justify-content-center">
      <div class="align-items-center col-12 col-md-6 col-lg-4 card ps-2 pe-2">
          <div class=" text-center"> <h5><small>Réinitialisez votre mot de passe</small></h5></div>
            <div class="col-sm-12">
              {{ form_start(resetForm) }}
              {{ form_row(resetForm.plainPassword) }}
                <div class="d-flex col justify-content-center">
                   <button class="btn btn-primary">Réinitialiser mon mot de passe</button>
                  {{ form_end(resetForm) }}
                </div>
                 <div class=" d-flex col justify-content-center mt-4">
                   <small>Retour à la page de<a class="ms-2" href="{{ path('main_home') }}">Connexion</a></small>
                 </div>
            </div>
      </div>
    </div>
{% endblock %}
